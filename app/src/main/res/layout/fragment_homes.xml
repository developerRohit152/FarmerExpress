<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?android:attr/actionBarSize"
    android:hapticFeedbackEnabled="false"
    tools:context=".ui.fragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llWeather"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <ProgressBar
                    android:id="@+id/tvLocAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:gravity="center"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#5772FF"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/ivBgL"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/imageplaceholder"

                             />
                        <TextView
                            android:id="@+id/tvCloudP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cloud cover phase"
                            android:textSize="14dp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/white" />

                        <TextView
                        android:id="@+id/tvCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City name"
                        android:textSize="12dp"
                        android:textColor="@color/white" />
                        <TextView
                            android:id="@+id/tvDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Day"
                            android:textSize="12dp"
                            android:layout_marginTop="2dp"
                        android:textColor="@color/white" />
                        <TextView
                            android:id="@+id/tvDayOrNight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dayornight"
                            android:textSize="12dp"
                            android:layout_marginTop="2dp"
                        android:textColor="@color/white" />




                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:orientation="vertical"
                            >
                        <TextView
                            android:id="@+id/tvTemp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="28dp"
                            android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/tvFeelTemp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/tvMin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Min 21"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/tvMax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Max 21"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/tvWind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="wind speed"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/tvWxPL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="wind speed"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/tbHumidity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="humidity"
                                android:gravity="center"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHomes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="?attr/actionBarSize"
                android:background="#CFCFCF"
                android:descendantFocusability="blocksDescendants"

                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/pbHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:id="@+id/fab"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_post_btn"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_post_add_24"
            android:drawablePadding="5dp"
            android:drawableTint="@color/white"
            android:padding="5dp"
            android:text="पोस्ट"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>